<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="header">
    <div class="header__title">
    <%= link_to "Blog", root_path, class: "header__title--text" %>
    </div>
    <div class="header__right">
    <% if user_signed__ri%>
    <%= link_to "ログイン", new_model_session_path, class: "header__right--btn "%>
    <%= link_to "新規登録", new_model_registration_path, class: "header__right--btn"%>
    
    </div>
    </header>
    <div class="contents">
    <%= yield %>
    </div>
  </body>
</html>
